<Window x:Class="OperacionesMatematicas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperacionesMatematicas"
        mc:Ignorable="d"
        Title="Operaciones Matematicas" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Operaciones" HorizontalAlignment="Left" Height="145" Margin="51,156,0,0" VerticalAlignment="Top" Width="157"/>
        <RadioButton x:Name="RadioSuma" Content="Suma" HorizontalAlignment="Left" Margin="82,192,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioResta" Content="Resta" HorizontalAlignment="Left" Margin="82,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.043,0.8"/>
        <RadioButton x:Name="RadioMultiplicacion" Content="Multiplicación" HorizontalAlignment="Left" Margin="82,237,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioDivision" Content="División" HorizontalAlignment="Left" Margin="82,260,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="264,173,0,0" TextWrapping="Wrap" Text="Operando 1" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="264,236,0,0" TextWrapping="Wrap" Text="Operando 2" VerticalAlignment="Top" RenderTransformOrigin="0.508,3.375"/>
        <TextBox x:Name="Operando1" Height="23" Margin="264,192,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" HorizontalAlignment="Left" FlowDirection="RightToLeft"/>
        <TextBox x:Name="Operando2" Height="23" Margin="264,260,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" HorizontalAlignment="Left" FlowDirection="RightToLeft"/>
        <TextBlock HorizontalAlignment="Left" Margin="583,215,0,0" TextWrapping="Wrap" Text="Resultado" VerticalAlignment="Top"/>
        <TextBox x:Name="ResultadoOperando" HorizontalAlignment="Left" Height="23" Margin="583,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="0" FlowDirection="RightToLeft"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="51,346,0,0" VerticalAlignment="Top" Width="92" Height="23"/>

    </Grid>
</Window>
